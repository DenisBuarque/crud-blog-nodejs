<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guia Express Blog</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
    <%- include ('partials/home_navbar.ejs') %>
    <br/>
    <div class="container">
        <h1>Guia Express Blog</h1>

        <% categories.forEach( category => { %>
            <a href="/category/<%= category.slug %>" class="btn"><%= category.title %></a>
        <% }) %>
        <br/><br/>

        <% articles.forEach( article => { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h4><%= article.title %></h4>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-primary">Ler artigo</a>
                </div>
            </div>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a href="/admin/articles/page/2" class="btn btn-light float-right">Pr√≥ximo</a>
            </div>
        </div>
           
    </div>
</body>

